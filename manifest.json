{
  "manifest_version": 3,
  "name": "ChatGPT History Blur",
  "version": "1.0.1",
  "description": "Blurs ChatGPT sidebar chat history with hide/show toggle.",
  "icons": {
    "128": "icons/icon.png"
  },
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://chat.openai.com/*"
      ],
      "js": ["storage.js", "content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
